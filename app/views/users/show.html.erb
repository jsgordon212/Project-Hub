<div id="profile" class="container">
    <div class="row">
    <p></p>
    <h1 id="user-name">Welcome <%= @user.username %></h1>
        <p> </p><p> </p>

        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Projects</h3>
                  </div>
                  <div class="col col-xs-6 text-right">
                    <%= link_to 'Create New', new_project_path(@project) %>
                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th>Project Name</th>
                        <th>Latest Update</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% @projects.each do |project| %>
                      <tr>
                        <td align="center">
                          <a class="btn btn-default" href="/projects/<%=project.id%>/edit"><em class="fa fa-pencil"></em></a>
                          <a class="btn btn-danger"><em class="fa fa-trash"></em></a>
                        </td>
                        <td><%= link_to project.title, project%></a></td>
                        <td><%= project.last_update %></td>
                      </tr>
                    <% end %>

                  </tbody>
                </table>

              </div>
              <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">Page 1 of <%= @user.project_page_count %>
                  </div>

                  <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                      <%= paginate @projects %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

</div></div></div>
